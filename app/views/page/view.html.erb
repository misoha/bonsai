<% if @page.self_and_ancestors.size > 1 %><p class="breadcrumb">
    <%= @page.self_and_ancestors.collect {|node| link_to_page node}.join " &gt; " %></p><% end %>
<h1><%=h @page.title %></h1>
<% for part in @page.page_parts %>
  <% unless part.current_page_part_revision.was_deleted %>
    <%= markdown(part.current_page_part_revision.body) %>
  <% end %>
<% end %>
 <% if @page.get_siblings.size > 0 %>
 <h4 class="breadcrumb">subpages: <%= @page.get_siblings.collect{|node| link_to_page node}.join ", " %>
 &nbsp;>>>&nbsp; <%=  link_to "show subpages tree", @page.get_path + "?pagesib&id=" + @page.id.to_s %></h4>
 <% end %>